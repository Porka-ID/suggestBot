{
  "name": "@sapphire/pieces",
  "version": "3.10.0",
  "description": "Sapphire's piece loader.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "author": "@sapphire",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src scripts --ext mjs,ts --fix",
    "format": "prettier --write {src,scripts}/**/*.ts",
    "docs": "typedoc-json-parser",
    "update": "yarn upgrade-interactive",
    "clean": "node scripts/clean-dist.mjs",
    "build": "tsc -b src && node scripts/make-import.mjs && gen-esm-wrapper dist/index.js dist/index.mjs",
    "watch": "tsc -b src -w",
    "bump": "cliff-jumper",
    "check-update": "cliff-jumper --dry-run",
    "prepack": "rollup-type-bundler"
  },
  "dependencies": {
    "@discordjs/collection": "^1.5.3",
    "@sapphire/utilities": "^3.13.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "@favware/cliff-jumper": "^2.2.3",
    "@favware/npm-deprecate": "^1.0.7",
    "@favware/rollup-type-bundler": "^2.0.0",
    "@sapphire/eslint-config": "^5.0.2",
    "@sapphire/prettier-config": "^2.0.0",
    "@sapphire/ts-config": "^5.0.0",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "gen-esm-wrapper": "^1.1.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typedoc": "^0.25.3",
    "typedoc-json-parser": "^9.0.1",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapphiredev/pieces.git"
  },
  "files": [
    "dist/**/*.js*",
    "dist/**/*.mjs*",
    "dist/**/*.d*"
  ],
  "engines": {
    "node": ">=v14.0.0",
    "npm": ">=7.0.0"
  },
  "keywords": [
    "discordjs",
    "bot",
    "typescript",
    "ts",
    "yarn",
    "discord",
    "sapphire"
  ],
  "bugs": {
    "url": "https://github.com/sapphiredev/pieces/issues"
  },
  "homepage": "https://www.sapphirejs.dev",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "resolutions": {
    "acorn": "^8.11.2",
    "ansi-regex": "^5.0.1",
    "minimist": "^1.2.8"
  },
  "prettier": "@sapphire/prettier-config",
  "packageManager": "yarn@4.0.2"
}